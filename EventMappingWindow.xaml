<Window x:Class="Hangar.EventMappingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Event Mapping" Height="420" Width="700" WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="TitleText" FontWeight="Bold" Margin="0,0,0,8"/>

        <DataGrid Grid.Row="1"
                  x:Name="MappingsGrid"
                  AutoGenerateColumns="False"
                  CanUserAddRows="True"
                  CanUserDeleteRows="True"
                  ItemsSource="{Binding EditedMappings}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="SimVar Value" Binding="{Binding MatchValue, UpdateSourceTrigger=PropertyChanged}" Width="2*"/>
                <DataGridTextColumn Header="Event Name" Binding="{Binding EventName, UpdateSourceTrigger=PropertyChanged}" Width="2*"/>
                <DataGridTextColumn Header="Parameter" Binding="{Binding Parameter, UpdateSourceTrigger=PropertyChanged}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
            <Button Width="90" Margin="0,0,8,0" Click="OkButton_Click">OK</Button>
            <Button Width="90" Click="CancelButton_Click">Cancel</Button>
        </StackPanel>
    </Grid>
</Window>